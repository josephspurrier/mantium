{
  "$schema": "https://json.schemastore.org/jsconfig",
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "outDir": "./dist/"
  },
  "include": [
    "*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
