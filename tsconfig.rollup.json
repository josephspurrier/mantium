{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "esModuleInterop": true,
    "baseUrl": "./",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "m.createElement",
    "jsxFragmentFactory": "m.fragment",
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
